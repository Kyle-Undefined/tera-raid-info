{
  "compilerOptions": {
    "types": ["node"],
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [ "node_modules", "dist" ],
  "include": ["./src/**/*"]
}
