{
  "name": "tera-raid-info",
  "version": "3.0.0",
  "description": "Aggregate view of the [Serebii](https://www.serebii.net/) Tera Raid Info for Pokemon Scarlet & Violet.",
  "main": "./src/main.ts",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build",
    "build:prod": "ng build --configuration production --base-href /tera-raid-info/ && cp ./src/404.html ./dist",
    "lint": "ng lint",
    "test": "ng test",
    "test:headless": "ng test --watch=false --browsers=ChromeHeadless",
    "version:major": "npm --no-git-tag-version version major",
    "version:minor": "npm --no-git-tag-version version minor",
    "version:patch": "npm --no-git-tag-version version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kyle-Undefined/tera-raid-info.git"
  },
  "keywords": [],
  "author": "Kyle Undefined",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kyle-Undefined/tera-raid-info/issues"
  },
  "homepage": "https://github.com/Kyle-Undefined/tera-raid-info#readme",
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@apollo/client": "3.12.8",
    "@favware/graphql-pokemon": "^8.1.1",
    "apollo-angular": "8.0.0",
    "graphql": "16.8.1",
    "rxjs": "7.8.1",
    "tslib": "2.6.2",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@types/jasmine": "^5.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
